<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="bischof.raphael.channelmessaging.fragment.ChannelListFragment"
        android:id="@+id/fragmentA_ID"
        tools:layout="@layout/fragment_channel_list" />
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="bischof.raphael.channelmessaging.fragment.MessageFragment"
        android:id="@+id/fragmentB_ID"
        tools:layout="@layout/fragment_message" />
</LinearLayout>